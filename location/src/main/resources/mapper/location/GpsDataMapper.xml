<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fun.guardianelf.location.mapper.GpsDataMapper">
    
    <resultMap type="GpsData" id="GpsDataResult">
        <result property="id"    column="id"    />
        <result property="localTime"    column="local_time"    />
        <result property="deviceId"    column="device_id"    />
        <result property="createdAt"    column="created_at"    />
    </resultMap>

    <sql id="selectGpsDataVo">
        select id, local_time, device_id, created_at from gps_data
    </sql>

    <select id="selectGpsDataList" parameterType="GpsData" resultMap="GpsDataResult">
        <include refid="selectGpsDataVo"/>
        <where>  
            <if test="localTime != null "> and local_time = #{localTime}</if>
            <if test="deviceId != null "> and device_id = #{deviceId}</if>
        </where>
    </select>
    
    <select id="selectGpsDataById" parameterType="Long" resultMap="GpsDataResult">
        <include refid="selectGpsDataVo"/>
        where id = #{id}
    </select>

    <insert id="insertGpsData" parameterType="GpsData" useGeneratedKeys="true" keyProperty="id">
        insert into gps_data
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="localTime != null">local_time,</if>
            <if test="deviceId != null">device_id,</if>
            <if test="createdAt != null">created_at,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="localTime != null">#{localTime},</if>
            <if test="deviceId != null">#{deviceId},</if>
            <if test="createdAt != null">#{createdAt},</if>
         </trim>
    </insert>

    <update id="updateGpsData" parameterType="GpsData">
        update gps_data
        <trim prefix="SET" suffixOverrides=",">
            <if test="localTime != null">local_time = #{localTime},</if>
            <if test="deviceId != null">device_id = #{deviceId},</if>
            <if test="createdAt != null">created_at = #{createdAt},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteGpsDataById" parameterType="Long">
        delete from gps_data where id = #{id}
    </delete>

    <delete id="deleteGpsDataByIds" parameterType="String">
        delete from gps_data where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>